#include <stdio.h> // підключаємо бібліотеку

int function (int x, int y) // створюємо функцію яка вираховує кількість кроків
{
   // створємо цикл який вираховує кількість кроків (цикл в якому рахується якщо х = у то кроків відповідно 0 )
   if (x == y)
   {
      return 0;
   }

   // а = 1, якщо b = 1, то результат = 1, якщо > 1, то виконується наступне
   int a = 1, b = y - x;  // оголошуємо змінні

   while (b > a) // Виконуємо цикл, доки b > a.
   {
      if (b <= 2 * a) // Якщо b <= a.
      {
         b = 0; // b = 0.
      }
      a++; // збільшуємо a на 1.
   }

   return a; // повертаємо a (кількість кроків)
}

int main()
{

   
   int x, y; // оголошуємо змінні
   
   printf("Enter x: "); // вводимо х
   scanf("%d", &x); // опрацьовуємо значення х
   printf("Enter y: "); // вводимо у
   scanf("%d", &y); // опрацьовуємо значення у
   
   printf("\nResult: %d", function (x, y)); // виводимо результат

   return 0; // повертаємо 0
}
